    class Restart
    {
        Process Pr = new Process();

        public void RestartNow()
        {
            Pr.StartInfo.FileName = @"cmd.exe";
            Pr.StartInfo.Arguments = "SHUTDOWN -r -t 0";
            Pr.Start();
        }
    }
}
